{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@screens/*": ["./src/screens/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["src/**/*", "*.js"]
}
